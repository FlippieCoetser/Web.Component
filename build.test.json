{
    "_comments": "ES2020 adds support for dynamic imports and import.meta",
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "sourceMap": true,
        "inlineSources": true
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "typedocOptions" :{
        "entryPoints": [
            "./src/component.ts", 
            "./src/template.ts"
        ],
        "excludePrivate": true,
        "excludeProtected": true,
        "disableSources": true,
        "categorizeByGroup": false,
        "sort": ["static-first", "visibility"],
        "name" : "Boilerplate Web Component",
        "hideGenerator": true,
        "mergeModulesMergeMode": "module"
    }
}